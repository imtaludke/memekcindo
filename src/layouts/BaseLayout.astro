---
// src/layouts/layout.astro (atau nama file layout Anda)

// Hapus atau komen impor dari site.ts jika Anda tidak lagi menggunakannya
// import { nama, desk, url } from '../utils/site.ts'; 

export interface Props {
  title: string;
  description: string;
  preconnectDomains?: string[];
  // siteName dan siteUrl sekarang bisa diatur dari props jika Anda ingin override,
  // atau langsung dari env jika tidak di-override
  siteName?: string; 
  siteUrl?: string; // Jika Anda ingin opsional meng-override PUBLIC_SITE_URL
}

const {
  title,
  description,
  preconnectDomains = [],
  // Ambil siteName dari props, jika tidak ada, ambil dari env
  siteName = import.meta.env.PUBLIC_SITE_NAME || 'memekcindo', // <-- Baru
  // Ambil siteUrl dari props, jika tidak ada, ambil dari env
  siteUrl = import.meta.env.PUBLIC_SITE_URL, // <-- Baru
} = Astro.props;

// Pastikan PUBLIC_SITE_URL tersedia
if (!siteUrl) {
  throw new Error("PUBLIC_SITE_URL is not defined in your .env file or astro.config.mjs. Please check your configuration.");
}

// Gunakan variabel yang diambil dari props/env
const currentUrl = siteUrl;
// Ambil deskripsi dari env juga
const siteDescription = description || import.meta.env.PUBLIC_SITE_DESCRIPTION || 'Video Bokep Indo Jepang Abg Montok Lokal Tante Viral Terbaru Bocil Ngentot Jilbab Smp Colmek'; // <-- Baru

const ogImageFullUrl = new URL(`/logo.png`, currentUrl).href;

const websiteSchema = {
  "@context": "http://schema.org",
  "@type": "WebSite",
  "name": siteName,
  "url": currentUrl,
  "description": siteDescription,
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${currentUrl}/video/{search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};

const organizationSchema = {
  "@context": "http://schema.org",
  "@type": "Organization",
  "name": siteName,
  "url": currentUrl,
  "logo": `${currentUrl}/logo.png`,
  "description": siteDescription,
  "sameAs": []
};

const jsonLdSchemas = [
  websiteSchema,
  organizationSchema
];

// Ambil kode verifikasi dari variabel lingkungan
const googleVerification = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;
const yandexVerification = import.meta.env.PUBLIC_YANDEX_SITE_VERIFICATION;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="icon" type="image/x-icon" href=`${currentUrl}/favicon.ico` /> {/* <-- Gunakan currentUrl */}
    <meta property="og:title" content={title} />
    <link rel="canonical" href={Astro.url.href} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImageFullUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageFullUrl} />
    
    {/* --- PERUBAHAN UTAMA DI SINI: Gunakan variabel --- */}
    {googleVerification && <meta name="google-site-verification" content={googleVerification} />}
    {yandexVerification && <meta name="yandex-verification" content={yandexVerification} />}
    {/* --- AKHIR PERUBAHAN UTAMA --- */}

    {preconnectDomains.map(domain => (
      <link rel="preconnect" href={domain} crossorigin>
    ))}
  <script type="application/ld+json" set:html={JSON.stringify(jsonLdSchemas)} />

    <link rel="stylesheet" href=`${currentUrl}/global.css` /> {/* <-- Gunakan currentUrl */}
  </head>
  <body>
    <header>
      <nav class="main-nav">
        <a href={currentUrl} class="logo">{siteName}</a> {/* <-- Gunakan currentUrl */}
        <form id="searchForm" action="/video/" method="get" class="search-form">
          <input type="search" name="query" placeholder="Cari video..." required />
          <button type="submit">Cari</button>
        </form>
        <ul class="nav-links">
          <li><a href={currentUrl}>Home</a></li> {/* <-- Gunakan currentUrl */}
          <li><a href=`${currentUrl}/category/`>Category</a></li> {/* <-- Gunakan currentUrl */}
          <li>
            <button id="darkModeToggle" class="dark-mode-toggle" aria-label="Toggle dark mode">‚òÄÔ∏è</button>
          </li>
        </ul>
      </nav>
    </header>

    <slot />

    <footer>
      <p>&copy; {new Date().getFullYear()} {siteName}. All rights reserved.</p>
    </footer>

    {/* Inline script yang sudah ada tetap di sini */}
    <script is:inline>document.addEventListener('DOMContentLoaded',()=>{const searchForm=document.getElementById('searchForm');if(searchForm){searchForm.addEventListener('submit',function(event){event.preventDefault();const input=searchForm.querySelector('input[name="query"]');const query=input?input.value.trim():'';if(query){const slugifiedQuery=query.toLowerCase().replace(/\s+/g,'-');window.location.href=`/video/${ slugifiedQuery }`}else{window.location.href=`/video/`}})}const toggleButton=document.getElementById('darkModeToggle');const body=document.body;const LIGHT_ICON='‚òÄÔ∏è';const DARK_ICON='üåô';const STORAGE_KEY='darkModeEnabled';function applyTheme(isDarkMode){if(isDarkMode){body.classList.add('dark-mode');toggleButton.textContent=DARK_ICON}else{body.classList.remove('dark-mode');toggleButton.textContent=LIGHT_ICON}}const savedMode=localStorage.getItem(STORAGE_KEY);if(savedMode==='true'){applyTheme(true)}else if(savedMode===null&&window.matchMedia('(prefers-color-scheme: dark)').matches){applyTheme(true)}else{applyTheme(false)}if(toggleButton){toggleButton.addEventListener('click',()=>{const isCurrentlyDarkMode=body.classList.contains('dark-mode');const newMode=!isCurrentlyDarkMode;applyTheme(newMode);localStorage.setItem(STORAGE_KEY,newMode)})}});</script>
  </body>
</html>
